<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidpotato.page.MainActivity"
    tools:showIn="@layout/page_main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/mainPage_timeCounter_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/mainPage_Counter" />

        <Button
            android:id="@+id/mainPage_WebView_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/mainPage_WebBrowser" />

        <Button
            android:id="@+id/mainPage_Camera_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/mainPage_Camera" />

        <Button
            android:id="@+id/mainPage_Touch_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/mainPage_TouchView" />
        <Button
            android:id="@+id/mainPage_Http_Btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/mainPage_Http" />
        <Button
            android:id="@+id/mainPage_Bluetooth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/mainPage_Bluetooth" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
